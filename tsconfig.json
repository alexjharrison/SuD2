{
  "compilerOptions": {
    "rootDirs": ["client", "common", "server"],
    "target": "esnext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "typeRoots": [
      "client/node_modules/@types",
      "server/node_modules/@types",
      "node"
    ],
    "paths": {
      "@/*": ["client/src/*"],
      "@@/*": ["./*"],
      "~/*": ["server/src/*"],
      "common/*": ["common/*"]
    }
  },
  "include": ["**/*.ts", "**/*.vue", "**/*.d.ts"],
  "exclude": ["client/dist", "client/node_modules", "server/node_modules"]
}
